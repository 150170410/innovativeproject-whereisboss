<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/myRalaticeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".ActivityScan">

    <Spinner
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spinBuildings"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"  />

    <Spinner
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spinFloors"
        android:layout_below="@+id/spinBuildings"
        android:layout_centerHorizontal="true"  />

    <Spinner
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spinRooms"
        android:layout_below="@+id/spinFloors"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get Building"
        android:id="@+id/bntGetBuildings"
        android:layout_below="@+id/spinRooms"
        android:layout_centerHorizontal="true"
        android:onClick="bntClick"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start Scan"
        android:id="@+id/bntStartScan"
        android:onClick="bntClick"
        android:layout_below="@+id/bntGetBuildings"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stop Scan"
        android:id="@+id/bntStopScan"
        android:layout_below="@+id/bntStartScan"
        android:layout_centerHorizontal="true"
        android:onClick="bntClick" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LOGOUT"
        android:id="@+id/bntLogout"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:onClick="bntClick" />

</RelativeLayout>
